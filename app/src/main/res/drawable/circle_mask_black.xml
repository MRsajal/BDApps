<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="oval">

    <!-- Transparent fill -->
    <solid android:color="@android:color/black" />

    <!-- Padding around the shape -->
    <stroke
        android:width="2dp"
        android:color="@color/primary" />
    <padding
        android:left="2dp"
        android:top="2dp"
        android:right="2dp"
        android:bottom="2dp" />
</shape>
