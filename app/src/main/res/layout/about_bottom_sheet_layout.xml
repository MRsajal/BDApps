                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/skills_background"
                            android:padding="5dp"
                            android:gravity="center"
                            android:paddingStart="20dp"
                            android:paddingEnd="40dp"
                            android:text="C"
                            android:textSize="16sp"/>

                        <ImageButton
                            android:padding="3dp"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:layout_marginEnd="8dp"
                            android:src="@drawable/ic_close"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:contentDescription="Remove skill"
                            android:scaleType="centerInside"
                            android:alpha="0.7"/>
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/skills_background"
                            android:padding="5dp"
                            android:gravity="center"
                            android:paddingStart="20dp"
                            android:paddingEnd="40dp"
                            android:text="C++"
                            android:textSize="16sp"/>

                        <ImageButton
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:padding="3dp"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:layout_marginEnd="8dp"
                            android:src="@drawable/ic_close"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:contentDescription="Remove skill"
                            android:scaleType="centerInside"
                            android:alpha="0.7"/>
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/skills_background"
                            android:padding="5dp"
                            android:gravity="center"
                            android:paddingStart="20dp"
                            android:paddingEnd="40dp"
                            android:text="Android Development"
                            android:textSize="16sp"/>

                        <ImageButton
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:padding="3dp"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:layout_marginEnd="8dp"
                            android:src="@drawable/ic_close"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:contentDescription="Remove skill"
                            android:scaleType="centerInside"
                            android:alpha="0.7"/>
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/skills_background"
                            android:padding="5dp"
                            android:gravity="center"
                            android:paddingStart="20dp"
                            android:paddingEnd="40dp"
                            android:text="Java"
                            android:textSize="16sp"/>

                        <ImageButton
                            android:padding="3dp"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:layout_marginEnd="8dp"
                            android:src="@drawable/ic_close"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:contentDescription="Remove skill"
                            android:scaleType="centerInside"
                            android:alpha="0.7"/>
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/skills_background"
                            android:padding="5dp"
                            android:gravity="center"
                            android:paddingStart="20dp"
                            android:paddingEnd="40dp"
                            android:text="Python"
                            android:textSize="16sp"/>

                        <ImageButton
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:padding="3dp"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:layout_marginEnd="8dp"
                            android:src="@drawable/ic_close"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:contentDescription="Remove skill"
                            android:scaleType="centerInside"
                            android:alpha="0.7"/>
                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>

            <!-- Interest Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="40dp"
                android:orientation="vertical">

                <!-- Section Header with Edit Option -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Interest"
                        android:textSize="18sp"
                        android:textStyle="bold"/>

<!--                    <ImageButton-->
<!--                        android:id="@+id/btnEditInterests"-->
<!--                        android:layout_width="32dp"-->
<!--                        android:layout_height="32dp"-->
<!--                        android:padding="3dp"-->
<!--                        android:layout_marginEnd="10dp"-->
<!--                        android:src="@drawable/edit_icon"-->
<!--                        android:background="?attr/selectableItemBackgroundBorderless"-->
<!--                        android:contentDescription="Edit Interests"-->
<!--                        android:scaleType="centerInside"/>-->

                    <ImageButton
                        android:id="@+id/btnAddInterest"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:layout_marginEnd="10dp"
                        android:src="@drawable/ic_add"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:contentDescription="Add Interest"
                        android:scaleType="centerInside"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/interestsContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginHorizontal="20dp"
                    android:orientation="vertical">

                    <!-- Interest items with individual edit options -->
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/skills_background"
                            android:padding="5dp"
                            android:gravity="center"
                            android:paddingStart="20dp"
                            android:paddingEnd="40dp"
                            android:text="Cycling"
                            android:textSize="16sp"/>

                        <ImageButton
                            android:padding="3dp"

                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:layout_marginEnd="8dp"
                            android:src="@drawable/ic_close"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:contentDescription="Remove interest"
                            android:scaleType="centerInside"
                            android:alpha="0.7"/>
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/skills_background"
                            android:padding="5dp"
